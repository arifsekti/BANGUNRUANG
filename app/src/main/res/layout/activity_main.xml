<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.bangunruang.bangunruang.MainActivity">


    <Button
        android:text="KUBUS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/Kubusbutton"
        android:onClick="proses"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Tabungbutton"
        android:text="TABUNG"
        android:layout_below="@+id/Kerucutbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <Button
        android:text="KERUCUT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Kerucutbutton"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/Kubusbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="BALOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Balokbutton"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/Tabungbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Pilih Bangun Ruang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        style="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
